<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="libertypassage.com.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_LAUNCH_BROADCASTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="q">

        <activity
            android:name=".basic.SplashActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".basic.LoginActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.ForgotPassword"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.UpdatePassword"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.SignUpActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.VerifyOTPSignUp"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.RequestOtpEmail"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.VerifyOtpEmailSignUp"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.VerifyOTPForgotPassword"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.Acknowledgement"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.EnrolmentDeclaration"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.MyTemperature"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.NoInternetConnection"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.AddAddress"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.ConfirmDetails"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.ChangeStatus"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.HomePage"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.UpdateAddress"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.UpdateProfile"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.VerifyOtpEmailUpadteProfile"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.RequestOtpEmailForgotPassword"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.VerifyOtpEmailForgotPassword"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.UpdateMyTemperature"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.LocationHistory"
            android:launchMode="singleTop"/>
        <activity android:name=".other.QRCodeScanerActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".other.QRScanResultActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".basic.TestingActivity"
            android:launchMode="singleTop"/>
<!--        <activity android:name=".basic.RedLocationAlert" />-->
<!--        <activity android:name=".basic.YellowInfectedAlert" />-->

        <activity
            android:name=".image_croping.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="com.google.gms.vision.DEPENDENCIES"
            android:value="barcode" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <service
            android:name=".services.LocationJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".services.MyService"
            android:clearTaskOnLaunch="true"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />

        <receiver
            android:name=".services.RestartServiceBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="uk.ac.shef.oak.activity_recognition.sensor_service.RestartSensor" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <service android:name=".utilis.LocationUpdateService" />




        <service
            android:name=".services.LocationServiceContinue"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="libertypassage.com.app.services.SendNotification" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <receiver android:name=".services.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>